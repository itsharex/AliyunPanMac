{
  "appId": "com.alixby.app",
  "productName": "alixby",
  "copyright": "copyright Â©2023 Odomu",
  "artifactName": "${productName}v${version}-${arch}.${ext}",
  "asar": true,
  "compression": "normal",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist"
  ],
  "mac": {
    "type": "distribution",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "category": "public.app-category.utilities",
    "extraResources": [
      { "from": "./static/engine/darwin", "to": "./engine"},
      { "from": "./static/engine/aria2.conf", "to": "./engine/aria2.conf"},
      { "from": "./static/crx", "to": "./crx"},
      { "from": "./app.ico", "to": "."},
      { "from": "./app.png", "to": "."}
    ],
    "target": [
      { "target": "dmg", "arch": [ "x64", "arm64" ] }
    ]
  },
  "linux": {
    "category": "Network",
    "extraResources": [
      { "from": "./static/engine/linux", "to": "./engine"},
      { "from": "./static/engine/aria2.conf", "to": "./engine/aria2.conf"},
      { "from": "./static/crx", "to": "./crx"},
      { "from": "./app.ico", "to": "."},
      { "from": "./app.png", "to": "."}
    ],
    "target": [ "AppImage" ]
  },
  "win": {
    "icon": "./app.ico",
    "extraResources": [
      { "from": "./static/engine/win32", "to": "./engine"},
      { "from": "./static/engine/aria2.conf", "to": "./engine/aria2.conf"},
      { "from": "./static/crx", "to": "./crx"},
      { "from": "./app.ico", "to": "."},
      { "from": "./app.png", "to": "."}
    ],
    "target": [
      { "target": "nsis", "arch": [ "x64" ] }
    ]
  },
  "dmg": {
    "window": { "width": 540, "height": 380 },
    "contents": [
      {  "x": 410, "y": 230, "type": "link", "path": "/Applications" },
      { "x": 130, "y": 230, "type": "file" }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
